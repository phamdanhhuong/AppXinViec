<UserControl x:Class="AppXinViecWPF.View.Custom.TextBoxCustom"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AppXinViecWPF.View.Custom"
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="250">

    <Grid Background="White">
        <TextBox x:Name="txtInput" TextChanged="txtInput_TextChanged" Text="{Binding TxtText}" Background="Transparent" BorderThickness="0" VerticalAlignment="Center" VerticalContentAlignment="Center" FontSize="18" Width="230"/>
        <TextBlock x:Name="tbPlaceHolder" Text="{Binding Placeholder}" Panel.ZIndex="-1" FontSize="18" FontWeight="Light" Foreground="DarkGray" VerticalAlignment="Center" Width="230"/>
    </Grid>
</UserControl>
