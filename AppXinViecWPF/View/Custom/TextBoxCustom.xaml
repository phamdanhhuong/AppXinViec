<UserControl x:Class="AppXinViecWPF.View.Custom.TextBoxCustom"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AppXinViecWPF.View.Custom"
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="250">

    <Grid x:Name="main" Background="{Binding BackGroundCustom}">
        <TextBox x:Name="txtInput" TextChanged="txtInput_TextChanged" Text="{Binding TxtText}" Width="{Binding WidthCustom}" Height="{Binding HeightCustom}" FontSize="{Binding InputFSize}" Background="Transparent" FontWeight="{Binding InputFWeight}" Foreground="{Binding InputFColor}" FontStyle="{Binding InputStyle}" BorderThickness="0" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
        <TextBlock x:Name="tbPlaceHolder" TextAlignment="{Binding PlaceHolderAlignment}" Width="{Binding WidthCustom}" Height="{Binding HeightCustom}" Text="{Binding Placeholder}" Panel.ZIndex="-2" FontSize="{Binding PlaceHolderFSize}" FontWeight="{Binding PlaceHolderFWeight}" Foreground="{Binding PlaceHolderFColor}" FontStyle="Italic" TextWrapping="Wrap" VerticalAlignment="Center"/>
    </Grid>
</UserControl>
